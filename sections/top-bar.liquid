{%- liquid
  assign C = section.settings.container
  assign show_topbar = section.settings.show_topbar | default: true
  assign show_mobile = section.settings.show_mobile
  assign show_phone = section.settings.show_phone_number
  assign show_email = section.settings.show_email
  assign show_social = section.settings.show_social
  assign show_store_page = section.settings.show_store_page
  assign show_country = section.settings.show_country
  assign show_language = section.settings.show_language
-%}

{%- if show_topbar -%}
  <style>
      .topbar{
      }
       .loyalty-badge-wrapper {
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-block;
    }
    .loyalty-badge {
      display: flex;
      align-items: center;
      background: #ffffff;
      padding: 0rem 1.5rem;
      border-radius: 100px;
      box-shadow: 3px 3px 15px rgba(255, 139, 0, 0.8);
      transition: all 0.3s ease;
      transform: scale(1.1);
      margin-top: 1rem;
      margin-bottom: 1rem;
    }
    .loyalty-badge__icon {
      width: 5rem;
      height: 5rem;
      flex-shrink: 0;
      margin-right: 1rem;
    }
    .loyalty-badge__icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .loyalty-badge__text {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
    }
    .loyalty-badge__count {
      font-size: 2rem;
      font-weight: 600;
      color: #cf6000;
      line-height: 1.2;
    }
    .loyalty-badge__label {
      font-size: 1.2rem;
      font-weight: 600;
      color: #333333;
      margin-top: 0.2rem;
      font-family: 'Arial', sans-serif;
    }
    .loyalty-badge-wrapper:hover .loyalty-badge {
      background: #fff4e6;
      box-shadow: 4px 4px 20px rgba(255, 139, 0, 1);
    }

    /* Mobil nézet (600px alatt): az ikonok egymás mellett maradnak */
    @media (max-width: 600px) {
      .section-full {
        flex-direction: row !important;
        justify-content: space-between !important;
        align-items: center !important;
      }
      .topbar-left {
        flex-wrap: wrap;
        justify-content: flex-start;
        margin-bottom: 0;
      }
      .topbar .bls__social-link {
    gap: 6px;
      }

      .loyalty-badge {
        padding: 0rem 1.5rem;
      }
      .loyalty-badge__icon {
        width: 4.5rem;
        height: 4.5rem;
      }
      .loyalty-badge__count {
        font-size: 1.6rem;
      }
      .loyalty-badge__label {
        font-size: 1rem;
      }
    }

    /* Nagyon kicsi képernyő (pl. 400px alatt) */
    @media (max-width: 320px) {
      .section-full {
        flex-direction: column !important;
        justify-content: center !important;
        align-items: center !important;
        text-align: center;
      }
      .topbar-left {
        justify-content: center;
        margin-bottom: 1rem;
      }
    }
  </style>

  <div class="topbar border-b bg-{{ section.settings.color_scheme }} gradient {% unless show_mobile %}d-none-mb{% endunless %}">
    <div class="{{ C }} section-full d-flex justify-content-between align-items-center py-2 flex-wrap">
      <div class="topbar-left d-flex flex-wrap align-items-center">
        {%- if show_phone -%}
          <a href="tel:{{ settings.store_phone }}" class="mr-4 text-sm hover:underline">{{ settings.store_phone }}</a>
        {%- endif -%}
        {%- if show_email -%}
          <a href="mailto:{{ settings.store_email }}" class="mr-4 text-sm hover:underline">
            {{- settings.store_email -}}
          </a>
        {%- endif -%}
        {%- if show_social -%}
          <div class="mr-4">{%- render 'social-media-links' -%}</div>
        {%- endif -%}
      </div>

      <div class="loyalty-badge-wrapper" onclick="handleLoyaltyClick()">
        <div class="loyalty-badge">
          <div class="loyalty-badge__icon">
            <img src="https://cdn.shopify.com/s/files/1/0916/5982/9623/files/reszveny.png?v=1747787071" alt="ikon">
          </div>
          <div class="loyalty-badge__text">
            <div class="loyalty-badge__count">
              {%- if customer -%}
                {{ customer.metafields.loyalty.reszvenyek_szama | default: 0 }} db
              {%- else -%}
                – db
              {%- endif -%}
            </div>
            <div class="loyalty-badge__label">Részvényeim</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function handleLoyaltyClick() {
      {% if customer %}
        window.location.href = '/';
      {% else %}
        window.location.href = '/account/login';
      {% endif %}
    }
  </script>
{%- endif -%}

{% schema %}
{
  "name": "Top Bar",
  "settings": [
    {
      "type": "select",
      "id": "container",
      "label": "Layout container",
      "default": "container",
      "options": [
        { "value": "container", "label": "Boxed" },
        { "value": "container-fluid", "label": "Fluid" }
      ]
    },
    { "type": "checkbox", "id": "show_topbar",       "label": "Show Top Bar",           "default": true },
    { "type": "checkbox", "id": "show_mobile",       "label": "Show on Mobile",         "default": true },
    { "type": "header",   "content": "Addons" },
    { "type": "checkbox", "id": "show_phone_number", "label": "Show Phone",             "default": true },
    { "type": "checkbox", "id": "show_email",        "label": "Show Email",             "default": true },
    { "type": "checkbox", "id": "show_social",       "label": "Show Social Links",      "default": true },
    { "type": "checkbox", "id": "show_store_page",   "label": "Show Store Page",        "default": true },
    { "type": "checkbox", "id": "show_country",      "label": "Show Country Switcher",  "default": true },
    { "type": "checkbox", "id": "show_language",     "label": "Show Language Switcher", "default": true }
  ]
}
{% endschema %}
